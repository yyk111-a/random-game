import random


def guess_number():
    target = random.randint(1, 100)
    attempts = 0
    while True:
        guess = int(input("猜一个1到100的数:"))
        attempts += 1

        if guess < target:
            print("太小了")
        elif guess > target:
            print("太大了")
        else:
            print(f"恭喜你，你用{attempts}次猜对了")
            break


if __name__ == "__main__":
    guess_number()
    input("游戏结束，按回车")
